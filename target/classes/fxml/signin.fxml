<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="400" maxWidth="700" prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #000000; -fx-border-radius: 2;" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SignInController">
    <children>
        <Label alignment="CENTER" contentDisplay="TOP" prefHeight="59.0" prefWidth="617.0" text="Sign In">
            <font>
                <Font size="41.0" />
            </font>
        </Label>
        <Label text="Username">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <TextField minHeight="50.0" promptText="Username">
            <font>
                <Font size="18.0" />
            </font></TextField>
        <Label text="Password">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <PasswordField maxHeight="50.0" minHeight="50.0" promptText="Password">
            <font>
                <Font size="18.0" />
            </font></PasswordField>
        <Button fx:id="btnSignIn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleBtnSignIn" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #D9D9D9; -fx-border-color: #B4B4B4; -fx-border-radius: 2;" text="Sign In">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
                <Insets left="200.0" top="50.0" />
            </VBox.margin>
        </Button>
    </children>
    <padding>
        <Insets left="50.0" right="50.0" top="50.0" />
    </padding>
</VBox>
