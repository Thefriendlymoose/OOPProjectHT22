<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="720.0" minWidth="1280.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.menuControllers.UserMenuController">
    <top>
        <fx:include source="menu.fxml" />
    </top>
    <center>

    </center>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <left>
            <VBox alignment="TOP_CENTER" prefHeight="695.0" prefWidth="200.0" style="-fx-border-style: none solid none none; -fx-border-color: transparent #5C5C5C transparent transparent;" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" text="Users">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Label>
                  <Button fx:id="openButton" maxWidth="150.0" mnemonicParsing="false" style="-fx-background-color: #CBCBCB; -fx-border-color: #5C5C5C; -fx-border-radius: 2; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.25), 10, 0.2, 2, 3);" text="Open User">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="createButton" maxWidth="150.0" mnemonicParsing="false" style="-fx-background-color: #CBCBCB; -fx-border-color: #5C5C5C; -fx-border-radius: 2; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.25), 10, 0.2, 2, 3);" text="Create User">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="listButton" maxWidth="150.0" mnemonicParsing="false" style="-fx-background-color: #CBCBCB; -fx-border-color: #5C5C5C; -fx-border-radius: 2; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.25), 10, 0.2, 2, 3);" text="User List">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="100.0" />
                     </VBox.margin>
                  </Button>
                  <Button onAction="#backBtnHandler" fx:id="backButton" maxWidth="150.0" mnemonicParsing="false" style="-fx-background-color: #CBCBCB; -fx-border-color: #5C5C5C; -fx-border-radius: 2; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.25), 10, 0.2, 2, 3);" text="Back">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
         </left>
      </BorderPane>
   </center>

</BorderPane>
