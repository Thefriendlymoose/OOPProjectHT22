<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<Stage xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.siteControllers.SiteOpenDetailsController">
    <scene>
        <Scene>
            <AnchorPane prefHeight="200" prefWidth="200" stylesheets="@../stylesheet.css">
            <children>
               <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0">
                  <children>
                     <Label text="Open Site">
                        <font>
                           <Font size="24.0" />
                        </font>
                        <VBox.margin>
                           <Insets top="25.0" />
                        </VBox.margin>
                     </Label>
                     <TextField fx:id="modalSearchField" promptText="Site Number" styleClass="generic-field">
                        <VBox.margin>
                           <Insets bottom="10.0" left="20.0" right="20.0" top="25.0" />
                        </VBox.margin>
                     </TextField>
                     <Label fx:id="warningLabel" maxWidth="180.0" wrapText="true">
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                     </Label>
                     <Button fx:id="openButton" mnemonicParsing="false" onAction="#onOpen" styleClass="generic-button" text="Open" />
                  </children>
               </VBox>
            </children></AnchorPane>
        </Scene>
    </scene>
</Stage>
