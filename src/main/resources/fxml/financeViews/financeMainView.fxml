<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" minHeight="720.0" minWidth="1280.0" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.financecontrollers.BorderPaneController">
   <top>
      <fx:include source="../menu.fxml" />
   </top>
   <left>
      <VBox fx:id="buttonBox" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="144.0" spacing="10.0" styleClass="sub-menu-box" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefHeight="19.0" prefWidth="139.0" text="Finances">
               <font>
                  <Font size="24.0" />
               </font></Label>
            <Button fx:id="newBookButton" mnemonicParsing="false" prefHeight="27.0" prefWidth="143.0" styleClass="generic-button" text="Add new Book">
               <font>
                  <Font size="18.0" />
               </font></Button>
            <Button fx:id="backButton" mnemonicParsing="false" prefHeight="27.0" prefWidth="155.0" styleClass="generic-button" text="Back">
               <font>
                  <Font size="18.0" />
               </font></Button>
            <ChoiceBox fx:id="choiceBox" prefWidth="150.0" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <ScrollPane fx:id="scrollPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <content>
          <AnchorPane fx:id="centerPane" minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <VBox fx:id="cardBox" prefHeight="201.0" prefWidth="100.0" />
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
   </center>
</BorderPane>
